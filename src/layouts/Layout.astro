---
import navbar_logo from '../../public/cymatics_logo.png';
const videoSrc = "/cymatics/background.mp4";
const { title } = Astro.props
---

<!doctype html>
<html lang="en" class="h-100">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/cymatics/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet">
		<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet"/>
	</head>
	<body class="d-flex flex-column h-100">
		<video autoplay loop muted playsinline class="video-background">
			<source src={videoSrc} type="video/mp4" />
		</video>
		<nav class="navbar navbar-expand-lg navbar-dark" style="margin: 10px;">
      <div class="container">
				<a class="navbar-brand">
          <img src={navbar_logo.src} alt="Cymatics" width="220px">
        </a>
        <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/cymatics">
                <div class="glitch-wrapper">
                  <div class="glitch" data-text="HOME">HOME</div>
                </div>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cymatics/discography">
                <div class="glitch-wrapper">
                  <div class="glitch" data-text="DISCOGRAPHY">DISCOGRAPHY</div>
                </div>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/cymatics/works">
                <div class="glitch-wrapper">
                  <div class="glitch" data-text="WORKS">WORKS</div>
                </div>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
		<slot />
		<footer class="mt-auto py-4">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-6 text-center text-md-start">
            <div class="social-icons">
              <a href="https://x.com/NOEL_404_" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-x-twitter"></i></a>
              <a href="https://www.instagram.com/noel_404_/" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-instagram"></i></a>
              <a href="https://bsky.app/profile/keytakatsuka.bsky.social" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-bluesky"></i></a>
              <a href="https://www.youtube.com/@noel_404_" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-youtube"></i></a>
              <a href="https://open.spotify.com/intl-ja/artist/4Q8Lf1goxdB6DbSjMWpLRs?si=VkfaeJXeQSW1V5FzMEMM7g" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-spotify"></i></a>
              <a href="https://music.apple.com/jp/artist/key-takatsuka/1716910757" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-apple"></i></a>
              <a href="https://noel-404.bandcamp.com/" target="_blank" rel="noopener noreferrer"><i class="fa-brands fa-bandcamp"></i></a>
            </div>
          </div>
          <div class="col-md-6 text-center text-md-end mb-3 mb-md-0">
            <p class="mb-0">&copy; Key Takatsuka/Cymatics <script type="text/javascript">myDate = new Date() ;myYear = myDate.getFullYear ();document.write(myYear);</script></p>
          </div>
        </div>
      </div>
    </footer>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
    color: #FFFFFF;
	}

  body::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: repeating-linear-gradient(rgba(0, 0, 0, 1), 3px, transparent 3px, transparent 5px);
  z-index: -1;
  }
	
  .footer {
    padding: 20px 0;
  }

  .social-icons a {
    color: #FFFFFF;
    font-size: 1.5rem;
    margin: 0 10px;
    transition: color 0.3s ease;
    opacity: 0.75;
  }

  .social-icons a:hover {
    opacity: 1;
  }

  .video-background {
	  position: fixed;
  	top: 0;
  	left: 0;
    width: 100%;
  	height: 100%;
  	object-fit: cover;
  	z-index: -2;
  }
	
	.glitch-wrapper {
  	width: 100%;
  	height: 100%;
		display: flex;
  	align-items: center;
  	justify-content: center;
		text-align: center;
		font-family: "Anton", sans-serif;
	}

  .glitch {
    position: relative;
    font-size: 28px;
    margin: 0px 10px;
    z-index: 1;
  }

  .glitch:hover {
    color: #FFFFFF;
  }

  .glitch:hover:before,
  .glitch:hover:after {
    display: block;
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0.8;
  }

  .glitch:before {
    animation: glitch-it 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) both infinite;
    color: #00FFFF;
    z-index: -1;
  }

  .glitch:after {
    animation: glitch-it 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) reverse both infinite;
    color: #FF00FF;
    z-index: -2;
  }

  @keyframes glitch-it {
    0% {
      transform: translate(0);
    }
    20% {
      transform: translate(-2px, 2px);
    }
    40% {
      transform: translate(-2px, -2px);
    }
    60% {
      transform: translate(2px, 2px);
    }
    80% {
      transform: translate(2px, -2px);
    }
    to {
      transform: translate(0);
    }
  }
</style>
